<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:local="using:Testownik.Styles">

    <!-- ItemContainerStyle -->
    <Style x:Key="AnswersItemContainerStyle" TargetType="GridViewItem">
        <Setter Property="Margin" Value="16 8" />
        <Setter Property="Width" Value="512" />
        <Setter Property="MaxWidth" Value="512" />
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalContentAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
    </Style>


    <Style x:Key="AnswersGridView" TargetType="GridView">
        <Setter Property="ItemContainerStyle" Value="{ThemeResource AnswersItemContainerStyle}" />
        <Setter Property="ItemsPanel" >
            <Setter.Value>
                <ItemsPanelTemplate>
                    <controls:WrapPanel 
                        HorizontalAlignment="Center"/>
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
